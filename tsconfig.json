{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node",
        "verbatimModuleSyntax": true,
        "strict": true,
        "noUnusedLocals": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "paths": {
            "@eslym/svelte-utility-stores/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}
